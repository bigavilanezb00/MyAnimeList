<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/animeFragment">

    <fragment
        android:id="@+id/animeFragment"
        android:name="com.example.myanimelist.AnimeFragment"
        android:label="fragment_anime"
        tools:layout="@layout/fragment_anime" />
    <fragment
        android:id="@+id/mostrarAnimeFragment"
        android:name="com.example.myanimelist.MostrarAnimeFragment"
        android:label="fragment_mostrar_anime"
        tools:layout="@layout/fragment_mostrar_anime" />
    <fragment
        android:id="@+id/nuevoAnimeFragment"
        android:name="com.example.myanimelist.NuevoAnimeFragment"
        android:label="fragment_nuevo_anime"
        tools:layout="@layout/fragment_nuevo_anime" />
    <fragment
        android:id="@+id/recyclerAnimeFragment"
        android:name="com.example.myanimelist.RecyclerAnimeFragment"
        android:label="fragment_recycler_anime"
        tools:layout="@layout/fragment_recycler_anime" >
        <action
            android:id="@+id/action_recyclerAnimeFragment_to_mostrarAnimeFragment"
            app:destination="@id/mostrarAnimeFragment" />
        <action
            android:id="@+id/action_recyclerAnimeFragment_to_nuevoAnimeFragment"
            app:destination="@id/nuevoAnimeFragment" />
    </fragment>
</navigation>